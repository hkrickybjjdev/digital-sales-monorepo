{
  "name": "@monorepo/api",
  "version": "0.1.0",
  "description": "Backend API for Temporary Pages Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx wrangler dev",
    "build": "tsup src/index.ts --format esm,cjs",
    "deploy": "npx wrangler publish",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:init": "npx wrangler d1 execute DB --local --file=./src/database/schema.sql",
    "db:clear": "npx wrangler d1 execute DB --local --file=./src/database/clear_tables.sql",
    "db:drop": "npx wrangler d1 execute DB --local --file=./src/database/drop_tables.sql"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "bcryptjs": "^2.4.3",
    "hono": "^3.7.2",
    "jose": "^4.14.6",
    "nanoid": "^5.0.3",
    "stripe": "^14.5.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231016.0",
    "@playwright/test": "^1.51.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.4",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "wrangler": "^4.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
